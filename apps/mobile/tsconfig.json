{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../../packages/shared/src/*"]
    }
  },
  "noEmit": true,
  "include": [
    "**/*.tsx",
    "**/*.ts",
    "../../packages/shared/src/**/*.ts",
    "../../packages/shared/src/**/*.tsx"
  ]
}
