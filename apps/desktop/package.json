{
  "name": "desktop",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n main,renderer -c yellow,cyan \"pnpm run dev:main\" \"pnpm run dev:renderer\"",
    "dev:renderer": "vite",
    "dev:main": "wait-on http://localhost:5173 && electron ./dist/main.js",
    "build": "pnpm run build:main && pnpm run build:renderer",
    "build:main": "tsc -p src/main",
    "build:renderer": "vite build"
  },
  "dependencies": {
    "electron": "^28.0.0",
    "wait-on": "^7.0.1",
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "vite": "^5.4.19",
    "@vitejs/plugin-react": "^4.0.0",
    "rollup": "^4.44.1",
    "concurrently": "^8.2.0"
  }
}
